<style>
  .btn-search {
    background-color: #ff385c;
    color: white;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .btn-search:hover {
    background-color: #e31c4b;
    color: white;
  }

  .search-inp {
    border-radius: 25px;
  }

  /* Center search bar on desktop */
  .search-box-desktop {
    width: 40%;
    margin: 0 auto;
  }

  /* Mobile search full width */
  @media (max-width: 768px) {
    .search-box-mobile {
      width: 100%;
      padding: 0.5rem 1rem;
    }
  }
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- Brand -->
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <i class="fa-solid fa-compass fs-3"></i>
    </a>

    <!-- DESKTOP centered search -->
    <form class="d-none d-lg-flex search-box-desktop" role="search">
      <input class="form-control search-inp me-2" type="search" placeholder="Search destinations" />
      <button class="btn btn-search" type="submit">Search</button>
    </form>

    <!-- Hamburger -->
    <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#navMenu">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- OFFCANVAS NAV -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="navMenu">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title">Menu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
      </div>

      <div class="offcanvas-body d-flex flex-column gap-2">

        <!-- MOBILE SEARCH (always visible on page, but this is fallback if you want it inside too) -->
        <form class="d-flex d-lg-none search-box-mobile" role="search">
          <input class="form-control search-inp me-2" type="search" placeholder="Search destinations" />
          <button class="btn btn-search" type="submit">Search</button>
        </form>

        <!-- Nav Links -->
        <a class="nav-link fw-semibold" href="/listings">Explore</a>
        <a class="nav-link fw-semibold" href="/listings/new">Airbnb your new Home</a>

        <% if (!currUser) { %>
          <a class="nav-link fw-semibold" href="/signup">SignUp</a>
          <a class="nav-link fw-semibold" href="/login">Login</a>
        <% } else { %>
          <a class="nav-link fw-semibold" href="/logout">Logout</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<!-- MOBILE SEARCH BAR BELOW NAVBAR -->
<div class="d-lg-none search-box-mobile">
  <form class="d-flex" role="search">
    <input class="form-control search-inp me-2" type="search" placeholder="Search destinations" />
    <button class="btn btn-search" type="submit">Search</button>
  </form>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

