<% layout("/layouts/boilerplate") %>


        <div class="row mt-3">
            <div class="col-8 offset">

                <h3>Edit your Listing</h3>
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation"
                 enctype="multipart/form-data"   >


                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required/>
                        <div class="valid-feedback">title looks good</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" name="listing[description]" required ><%= listing.description %> </textarea>
                        <div class="invalid-feedback">please inter a short description</div>
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload new image</label>
                        <input class="form-control"
                         name="listing[image][url]"
                           type="file"
                             />
                    </div>

                    <div class="mb-3">
                        <label for="Price" class="form-label">Price</label>
                        <input class="form-control" name="listing[price]" value="<%= listing.price %>" type="number" required />
                        <div class="invalid-feedback">please enter a valid price</div>
                    </div>

                    <div class="mb-3">
                        <label for="country" class="form-label">country</label>
                        <input class="form-control" name="listing[country]" value="<%= listing.country %>" type="text" required />
                        <div class="invalid-feedback">please inter a valid country</div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">location</label>
                        <input class="form-control" name="listing[location]" value="<%= listing.location  %>" type="text" required/>
                        <div class="invalid-feedback">please inter a valid location</div>
                    </div>

                    <br /><br />
                    <button class="btn btn-dark edit-btn mt-3">Add</button>

                </form>
            </div>
        </div>
        